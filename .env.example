# ================================
# DATABASE
# ================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/aid_app_db?schema=public"

# ================================
# REDIS
# ================================
REDIS_URL="redis://localhost:6379"

# ================================
# JWT
# ================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# ================================
# OTP
# ================================
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# ================================
# EMAIL (SMTP)
# ================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM="noreply@university.edu"

# Or use SendGrid
# SENDGRID_API_KEY="your-sendgrid-api-key"

# ================================
# SMS (Twilio)
# ================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Or use MessageBird
# MESSAGEBIRD_API_KEY="your-messagebird-api-key"

# ================================
# FILE STORAGE (S3/MinIO)
# ================================
# AWS S3
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="aid-app-files"

# Or MinIO (self-hosted)
# MINIO_ENDPOINT="localhost"
# MINIO_PORT=9000
# MINIO_ACCESS_KEY="minioadmin"
# MINIO_SECRET_KEY="minioadmin"
# MINIO_BUCKET="aid-app-files"

# ================================
# NEXT AUTH
# ================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# ================================
# SOCKET.IO
# ================================
SOCKET_SERVER_URL="http://localhost:3000"

# ================================
# ANALYTICS & MONITORING
# ================================
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ================================
# ENVIRONMENT
# ================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_AUTH=5
RATE_LIMIT_API=100
RATE_LIMIT_UPLOAD=10

# ================================
# FEATURE FLAGS
# ================================
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PDF_DOWNLOAD=true
